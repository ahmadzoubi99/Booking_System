@model IEnumerable<Booking_clothes.Models.Category>

@{
    // ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}
<div class="container-fluid py-4" >
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6 style="margin-bottom:20px">
                        Categories
                    </h6>
                    <div>

                        <p style="background-color:#d00e9a;padding:8px;display:inline;margin-top:10px">
                            <a style="color:white" asp-action="Create">Create New</a>
                        </p>
                    </div>
                    <div style="margin:10px">
                    </div>

                
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table  class="table align-items-center mb-0 ">
                            <thead>
                                <tr>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.DisplayNameFor(model => model.CategoryName)
                                    </th>
                                  @*   <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        @Html.DisplayNameFor(model => model.IsDeleted)
                                    </th> *@
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Action
                                     </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td class="align-middle text-center">
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                        <span class="text-secondary text-xs font-weight-bold"></span>
                                      </td>
                                         <td class="align-middle text-center">
@*                                         <span class="text-secondary text-xs font-weight-bold">
                                                @Html.DisplayFor(modelItem => item.IsDeleted)
                                        </span> *@
                                       </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a href="#" onclick="deleteItem(@item.Id); return false;">Delete</a>
                                        </td>

                            </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    

<script>
    function deleteItem(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteConfirmed", "Categories")', // Ensure this URL is correct
                    data: {
                        id: id,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() // Ensure this token is available
                    },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                response.message,
                                'success'
                            ).then(() => {
                                location.reload(); // Reload the page or update the DOM as needed
                            });
                        } else {
                            Swal.fire(
                                'Error!',
                                response.message,
                                'error'
                            );
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire(
                            'Error!',
                            'There was an error deleting your item.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>
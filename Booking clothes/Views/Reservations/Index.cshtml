@model IEnumerable<Booking_clothes.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6 style="margin-bottom:20px">
                        Reservations
                    </h6>
                    <p style="background-color:#d00e9a;padding:8px;display:inline">
                        <a style="color:white" asp-action="Create">Create New</a>
                    </p>
                    <div style="margin:10px">
                        <form asp-action="SearchByReservationrId" method="post" class="d-flex align-items-center">
                            <input type="text" name="id" style="display:inline;width:700px;" class="form-control" placeholder="Search by user" />
                            <button type="submit" class="btn btn-primary ms-2" style="margin-right:3%">Search</button>
                        </form>
                    </div>
                    
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0 example1">
                            <thead>

                                <tr>
                                    <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User)
            </th>
                                <th >
                                    @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
                                <th >
                                    @Html.DisplayNameFor(model => model.Status)
            </th>
                                <th >
                                    @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
                              
                                <th >
                                    @Html.DisplayNameFor(model => model.Address)
            </th>
             <th >
                                    Reservarion Detalis
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>            
            
            <td class="align-middle text-center">@item.Id</td>


                 <td class="align-middle text-center">
                     @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
                 <td class="align-middle text-center">
                     @Html.DisplayFor(modelItem => item.ReservationDate)
            </td>
                 <td class="align-middle text-center">
                     @Html.DisplayFor(modelItem => item.Status)
            </td>
                 <td class="align-middle text-center">
                     @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
@*                  <td class="align-middle text-center">
                     @Html.DisplayFor(modelItem => item.IsDeleted)
            </td> *@
                 <td class="align-middle text-center">
                     @Html.DisplayFor(modelItem => item.Address.AddressLine1)
            </td>
                 <td class="align-middle text-center">
                     <p style="color:white;background-color:#d00e9a;padding:8px;display:inline;margin-bottom:10px">
                     @Html.ActionLink("Reservation Details", "ReservationDetails", "Reservations", new { id = item.Id }, null)
                     </p>
            </td>
            <td class="align-middle text-center">
                 <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('.example1').DataTable({
            dom: 'Bfrtip'
            ,
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
@model IEnumerable<Booking_clothes.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";

}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6 style="margin-bottom:20px">
                        Products
                    </h6>
                    <div>
                        <p class="form-control" style="background-color:#d00e9a;padding:8px;display:inline;margin-top:10px ">
                            <a style="color:white" asp-action="Create">Create New</a>
                        </p>
                    </div>
                    <div style="margin:10px">
                        <form asp-action="SearchByProducttName" method="post" class="d-flex align-items-center">
                            <input type="text" name="name" style="display:inline;width:700px;" class="form-control" placeholder="Search by user" />
                            <button type="submit" class="btn btn-primary ms-2" style="margin-right:3%">Search</button>
                        </form>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table id="example1" class="table align-items-center mb-0 example1">
    <thead>
        <tr>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Color)
            </th>
             <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Category)
            </th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.PricePerDay)
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.DiscountValue)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                    @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Image1)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Image2)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.Image3)
            </th>
             <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
               Reservations Products
                </th>
                 <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                     Reviews
                 </th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                       Action
                    </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.PricePerDay)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.DiscountValue)
            </td>
            <td  class="align-middle text-center">
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
                <td  class="align-middle text-center">
                    <img src="@Url.Content("~/Images/" + item.Image1 )" asp-append-version="true" width="100" height="100" />
                </td >
                <td  class="align-middle text-center">
                    <img src="@Url.Content("~/Images/" + item.Image2 )" asp-append-version="true" width="100" height="100" />
                </td>
                <td  class="align-middle text-center">
                    <img src="@Url.Content("~/Images/" + item.Image3 )" asp-append-version="true" width="100" height="100" />
                </td>
            <td  class="align-middle text-center">
                    @Html.Display("item.CreatedAt", "yyyy-MM-dd")
            </td>
            <td  class="align-middle text-center">
               <p style="color:white;background-color:#d00e9a;padding:8px;display:inline;margin-bottom:10px">
               @Html.ActionLink("Reservation", "Reservation", "Products", new { clothId =1 }, null)
               </p>
            </td>
               <td style="color:white;" class="align-middle text-center">
                <p style="color:white;background-color:#d00e9a;padding:8px;display:inline;margin-bottom:10px">
                    @Html.ActionLink("Reviews", "ReviewsByProductId", "Products", new { clothId =1 }, null)
                 </p>
            </td>

            <td  class="align-middle text-center">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('.example1').DataTable({
            dom: 'Bfrtip'
            ,
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>

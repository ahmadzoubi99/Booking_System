@model Booking_clothes.Models.Products

@{
    ViewData["Title"] = "Delete";
    Layout = "AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4" style="padding-left:25px">
                <div class="card-header pb-0">
                    <h6 style="margin-bottom:20px">Products</h6>
                    <h4>Delete</h4>
                    <h3>Are you sure you want to delete this?</h3>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <div>
                            <hr />
                            <dl class="row">
                                <!-- Your display elements here -->
                            </dl>

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        @if (ViewData["DeleteSuccess"] != null && (bool)ViewData["DeleteSuccess"])
        {
            <text>
                toastr.success('Product deleted successfully!', 'Success');
            </text>
        }
        else if (ViewData["DeleteSuccess"] != null && !(bool)ViewData["DeleteSuccess"])
        {
            <text>
                toastr.error('Failed to delete product.', 'Error');
            </text>
        }
    </script>
}

<style>
    .elegant-testimonial-slider {
        position: relative;
        max-width: 700px;
        margin: 50px auto;
        overflow: hidden;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .elegant-slider-container {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .elegant-slide {
        min-width: 100%;
        box-sizing: border-box;
        padding: 40px;
        text-align: center;
    }

    .elegant-testimonial-text {
        font-size: 1.5em;
        color: #444;
        margin-bottom: 20px;
        font-style: italic;
        line-height: 1.6;
        position: relative;
    }

        .elegant-testimonial-text::before,
        .elegant-testimonial-text::after {
            content: '"';
            font-size: 2.5em;
            color: #ccc;
            position: absolute;
        }

        .elegant-testimonial-text::before {
            left: -10px;
            top: -10px;
        }

        .elegant-testimonial-text::after {
            right: -10px;
            bottom: -10px;
        }

    .elegant-testimonial-author {
        font-size: 1.2em;
        color: #888;
        margin-top: 10px;
        font-weight: 600;
    }

    .elegant-slider-controls {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
        pointer-events: none;
    }

    .elegant-prev-btn,
    .elegant-next-btn {
        background-color: rgba(0, 0, 0, 0.3);
        border: none;
        color: white;
        padding: 15px;
        cursor: pointer;
        pointer-events: all;
        border-radius: 50%;
        transition: background-color 0.3s ease;
    }

        .elegant-prev-btn:hover,
        .elegant-next-btn:hover {
            background-color: rgba(0, 0, 0, 0.6);
        }

    .elegant-prev-btn {
        margin-left: 15px;
    }

    .elegant-next-btn {
        margin-right: 15px;
    }

</style>


@model Booking_clothes.Models.Testimonial

@{
    Layout = "HomeLayout2";
}



<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 190px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Testimonial</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a asp-action="Index" asp-asp-controller="Home">Home</a></p>
            <p class="m-0 px-2">-</p>
        </div>
    </div>
</div>
<!-- Page Header End -->


<div style="padding-left:30px;padding-top:25px  ; ">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="CTestimonial">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="TestimonialText" class="control-label"></label>
                    <textarea asp-for="TestimonialText" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="TestimonialText" class="text-danger"></span>
                </div>
                <div class="d-flex mb-4">
                    <button type="submit" class="btn btn-primary ml-3">Send Message</button>
                </div>
            </form>
        </div>
    </div>


</div>

